            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        .stat-card {
            text-align: center;
            padding: 2rem;
            border-radius: 12px;
            background: var(--bg-secondary);
            border: 1px solid var(--border);
        }

        .stat-number {
