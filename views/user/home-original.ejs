            font-weight: bold;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--text-secondary);
        }

        /* Categories Section */
        .categories {
            padding: 6rem 2rem;
            background: var(--bg-secondary);
        }

        .categories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 3rem;
        }

        .category-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .category-card:hover {
            transform: scale(1.05);
            border-color: var(--accent);
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.1);
        }

        .category-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .category-name {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .category-count {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* CTA Section */
        .cta {
            padding: 6rem 2rem;
            background: #151515;
            text-align: center;
        }

        .cta h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
