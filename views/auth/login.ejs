<%- include('../partials/header') %>

<style>
  .login-container {
    height: 100vh;
    max-height: 100vh;
    display: flex;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
    overflow: hidden;
  }

  .login-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 60px;
    position: relative;
    overflow: hidden;
  }

  /* .left-logo {
    width: 150px;
    margin-bottom: 40px;
    z-index: 10;
  } */
  .left-logo {
    position: fixed;
    top: 20px;
    left: 20px;
    height: 50px;
    opacity: .2;
  }

  .login-content {
    max-width: 500px;
    z-index: 10;
  }

  .login-left h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 24px;
    background: linear-gradient(135deg, var(--accent-color) 0%, #6bb6ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-align: center;
  }

  .login-left p {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 16px;
  }

  .feature-list {
    list-style: none;
    margin-top: 32px;
    padding: 0;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
    font-size: 1.1rem;
    color: var(--text-primary);
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  /* Animated SVG Background */
  .svg-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.1;
    z-index: 1;
  }

  .floating-shape {
    position: absolute;
    animation: float 20s infinite ease-in-out;
  }

  .shape-1 {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .shape-2 {
    top: 60%;
    left: 70%;
    animation-delay: 5s;
  }

  .shape-3 {
    top: 30%;
    right: 10%;
    animation-delay: 10s;
  }

  .shape-4 {
    bottom: 20%;
    left: 30%;
    animation-delay: 15s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(30px, -30px) rotate(90deg);
    }
    50% {
      transform: translate(-20px, 20px) rotate(180deg);
    }
    75% {
      transform: translate(20px, 30px) rotate(270deg);
    }
  }

  .login-right {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    background: var(--bg-primary);
  }

  .login-form-card {
    padding: 0;
    max-width: 500px;
    width: 100%;
  }

  .form-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .form-header h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-primary);
  }

  .form-header p {
    color: var(--text-secondary);
    font-size: 1rem;
  }

  .form-group {
    margin-bottom: 24px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--text-primary);
    font-size: 14px;
  }

  .form-group input {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    font-size: 15px;
    transition: all 0.2s;
    background: var(--bg-primary);
    color: var(--text-primary);
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(216, 154, 58, 0.1);
  }

  .btn-submit {
    width: 100%;
    padding: 14px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    margin-top: 8px;
    transition: all 0.2s;
    background-color: var(--accent-color);
    color: white;
    border: none;
    cursor: pointer;
  }

  .btn-submit:hover {
    background-color: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(216, 154, 58, 0.4);
  }

  .oauth-section {
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid var(--border-color);
  }

  .oauth-label {
    text-align: center;
    color: var(--text-secondary);
    font-size: 14px;
    margin-bottom: 16px;
    font-weight: 500;
  }

  .oauth-buttons {
    display: flex;
    justify-content: center;
    gap: 16px;
  }

  .btn-oauth-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
    text-decoration: none;
    border: 2px solid var(--border-color);
    background: var(--bg-primary);
  }

  .btn-oauth-icon:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  .btn-google {
    border-color: #DB4437;
  }

  .btn-google:hover {
    background: #DB4437;
    border-color: #DB4437;
  }

  .btn-google:hover svg path {
    fill: white;
  }

  .oauth-icon {
    width: 24px;
    height: 24px;
  }

  .auth-footer {
    text-align: center;
    margin-top: 24px;
    color: var(--text-secondary);
    font-size: 14px;
  }

  .auth-footer a {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 600;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .login-container {
      flex-direction: column-reverse;
      height: auto;
      max-height: none;
      overflow-y: auto;
    }

    .login-left {
      padding: 40px 20px;
      min-height: auto;
    }

    .left-logo {
      width: 120px;
      margin-bottom: 30px;
    }

    .login-left h1 {
      font-size: 2rem;
    }

    .feature-list {
      margin-top: 20px;
    }

    .login-right {
      padding: 40px 20px;
    }

    .login-form-card {
      padding: 0;
    }
  }

  @media (max-width: 768px) {
    .login-left {
      padding: 30px 20px;
    }

    .left-logo {
      width: 100px;
      margin-bottom: 20px;
    }

    .login-left h1 {
      font-size: 1.75rem;
    }

    .login-left p {
      font-size: 1rem;
    }

    .feature-list li {
      font-size: 1rem;
    }

    .login-form-card {
      padding: 0;
    }

    .form-header h2 {
      font-size: 1.5rem;
    }
  }
</style>

