# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret
SESSION_SECRET=your-random-secret-key-change-this

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=docpress
PG_USERNAME=postgres
PG_PASSWORD=your-password

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/docpress

# Storage Configuration
# Options: 'local' or 's3'
STORAGE_TYPE=local

# S3 Storage Configuration (only if STORAGE_TYPE=s3)
# You can use either AWS_ or S3_ prefixed variables
# AWS S3 style:
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# OR S3-Compatible Storage style:
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_REGION=us-east-1
BUCKET=your-bucket-name
S3_ENDPOINT=https://your-s3-compatible-url.com
S3_FORCE_PATH_STYLE=true

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/facebook/callback
